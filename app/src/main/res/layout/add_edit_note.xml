<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_above="@id/addNote"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/note_title_lay"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:hint="Note Title"
                        android:paddingTop="13dp"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp"
                        app:boxStrokeColor="@color/purple_200"
                        app:errorEnabled="true"
                        app:hintTextColor="@color/purple_200"
                        app:startIconDrawable="@drawable/ic_baseline_sticky_note_2_24">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/note_title_val"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <EditText
                        android:id="@+id/note_body"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:minLines="10"
                        android:gravity="top|start"
                        android:background="@drawable/round_back"
                        android:layout_below="@id/note_title_lay"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:text="Publish Note"
            android:id="@+id/addNote"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="100dp"
            android:layout_centerHorizontal="true"
            android:layout_height="60dp"/>
    </RelativeLayout>

</RelativeLayout>