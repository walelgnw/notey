<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Notey" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/purple_500</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <style name="dark">
        <item name="colorPrimary">#424242</item>
        <item name="colorPrimaryDark">#616161</item>
        <item name="colorAccent">#757575</item>
    </style>

    <style name="blue">
        <item name="colorPrimary">#0073ff</item>
        <item name="colorPrimaryDark">#4dcaff</item>
        <item name="colorAccent">#9ae1ff</item>
    </style>

    <style name="orange">
        <item name="colorPrimary">#ff8c00</item>
        <item name="colorPrimaryDark">#ff824d</item>
        <item name="colorAccent">#ffb89a</item>
    </style>

</resources>